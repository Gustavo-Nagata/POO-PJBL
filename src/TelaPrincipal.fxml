<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="TelaPrincipalController">

    <top>
        <Label text="Meu Sistema de Chamados" style="-fx-font-size: 24px;">
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10" />
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Clientes Registados:" />
                <ListView fx:id="listaClientes" />
            </VBox>

            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Chamados Abertos:" />
                <ListView fx:id="listaChamados" />
            </VBox>

            <VBox spacing="10">
                <Label text="Abrir Novo Chamado" />
                <Label text="Descrição:" />
                <TextArea fx:id="campoDescricao" promptText="Descreva o problema..." wrapText="true" />
                <Button fx:id="botaoAbrirChamado" text="Abrir Chamado" onAction="#handleAbrirChamado" />
            </VBox>

        </HBox>
    </center>

</BorderPane>